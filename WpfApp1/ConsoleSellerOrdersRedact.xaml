<Window x:Class="WpfApp1.ConsoleSellerOrdersRedact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ConsoleSellerOrdersRedact" MinHeight="1024" MinWidth="1440">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="1024" VerticalAlignment="Center" Width="402" Fill="#6A7181"/>
        <Rectangle HorizontalAlignment="Left" Height="138" Margin="0,0,0,0" VerticalAlignment="Top" Width="402" Fill="#6EC5CB"/>
        <TextBlock Margin="22,10,0,0"
Text="Miku" FontSize="64" IsHitTestVisible="False"/>
        <TextBlock Margin="22,85,0,0"
Text="Панель продавца" FontSize="32" IsHitTestVisible="False"/>

        <Button HorizontalAlignment="Left" Margin="0,138,0,0" VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" FontSize="28" Width="402" Height="70"/>
        <TextBlock Margin="22,157,0,0"
Text="История заказов" FontSize="28" IsHitTestVisible="False" Foreground="#6EC5CB"/>
        <Rectangle HorizontalAlignment="Left" Height="1" Margin="6,208,0,0" Fill="#6EC5CB" VerticalAlignment="Top" Width="390"/>

        <Button HorizontalAlignment="Left" Margin="0,209,0,0" VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" FontSize="28" Width="402" Height="70"/>
        <TextBlock Margin="22,228,0,0"
Text="Список товаров" FontSize="28" IsHitTestVisible="False" Foreground="#fff"/>
        <Rectangle HorizontalAlignment="Left" Height="1" Margin="6,279,0,0" Fill="#6EC5CB" VerticalAlignment="Top" Width="390"/>

        <Rectangle HorizontalAlignment="Left" Height="1" Margin="6,953,0,0" Fill="#6EC5CB" VerticalAlignment="Top" Width="390"/>
        <Button HorizontalAlignment="Left" Margin="0,954,0,0" VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" FontSize="28" Width="402" Height="70"/>
        <TextBlock Margin="157,973,0,0"
Text="Выход" FontSize="28" IsHitTestVisible="False" Foreground="#fff"/>
        <Rectangle HorizontalAlignment="Left" Height="850" Margin="475,62,0,0" 
                   Fill="#e4e4e4" VerticalAlignment="Top" Width="900"/>
        <Button HorizontalAlignment="Left" Margin="1112,943,0,0" 
VerticalAlignment="Top" Style="{StaticResource ImageButtonStyle}" />

        <StackPanel Width="300" HorizontalAlignment="Left" Margin="500,85,0,112">
            <TextBlock Text="1. Выберите ID заказа:" Margin="0,0,0,5" FontWeight="Bold"/>

            <ComboBox 
        ItemsSource="{Binding Orders}" 
        DisplayMemberPath="Id" 
        SelectedItem="{Binding SelectedOrder, Mode=TwoWay}"
        Margin="0,0,0,20"/>

            <TextBlock Text="2. Редактирование:" Margin="0,0,0,10" FontWeight="Bold"/>

            <Label Content="ID Клиента:"/>
            <TextBox Text="{Binding SelectedOrder.ClientId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>

            <Label Content="Сумма:"/>
            <TextBox Text="{Binding SelectedOrder.Summ, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="Доставка:" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <CheckBox IsChecked="{Binding SelectedOrder.Delivery, Mode=TwoWay}" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="Статус (выполнен):" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <CheckBox IsChecked="{Binding SelectedOrder.Status, Mode=TwoWay}" VerticalAlignment="Center"/>
            </StackPanel>

            <Button Content="Сохранить Изменения" Click="SaveButton_Click" Margin="0,15,0,0" Padding="5"/>

        </StackPanel>
    </Grid>
</Window>
