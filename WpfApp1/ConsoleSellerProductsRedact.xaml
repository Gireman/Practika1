<Window x:Class="WpfApp1.ConsoleSellerProductsRedact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ConsoleSellerProductsRedact" Height="1024" Width="1440">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="1024" VerticalAlignment="Center" Width="402" Fill="#6A7181"/>
        <Rectangle HorizontalAlignment="Left" Height="138" Margin="0,0,0,0" VerticalAlignment="Top" Width="402" Fill="#6EC5CB"/>
        <TextBlock Margin="22,10,0,0"
Text="Miku" FontSize="64" IsHitTestVisible="False"/>
        <TextBlock Margin="22,85,0,0"
Text="Панель продавца" FontSize="32" IsHitTestVisible="False"/>

        <Button HorizontalAlignment="Left" Margin="0,138,0,0" VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" FontSize="28" Width="402" Height="70" Click="Button_ClickOrders"/>
        <TextBlock Margin="22,157,0,0"
Text="История заказов" FontSize="28" IsHitTestVisible="False" Foreground="#fff"/>
        <Rectangle HorizontalAlignment="Left" Height="1" Margin="6,208,0,0" Fill="#6EC5CB" VerticalAlignment="Top" Width="390"/>

        <Button HorizontalAlignment="Left" Margin="0,209,0,0" VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" FontSize="28" Width="402" Height="70"/>
        <TextBlock Margin="22,228,0,0"
Text="Список товаров" FontSize="28" IsHitTestVisible="False" Foreground="#6EC5CB"/>
        <Rectangle HorizontalAlignment="Left" Height="1" Margin="6,279,0,0" Fill="#6EC5CB" VerticalAlignment="Top" Width="390"/>

        <Rectangle HorizontalAlignment="Left" Height="1" Margin="6,953,0,0" Fill="#6EC5CB" VerticalAlignment="Top" Width="390"/>
        <Button HorizontalAlignment="Left" Margin="0,954,0,0" VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" FontSize="28" Width="402" Height="70" Click="Button_ClickExit"/>
        <TextBlock Margin="157,973,0,0"
Text="Выход" FontSize="28" IsHitTestVisible="False" Foreground="#fff"/>
        <Rectangle HorizontalAlignment="Left" Height="850" Margin="475,62,0,0" 
                   Fill="#e4e4e4" VerticalAlignment="Top" Width="900"/>

        <Button HorizontalAlignment="Left" Margin="476,943,0,0" 
 VerticalAlignment="Top" Style="{StaticResource ImageButtonStyleBack}" 
 Width="263" Height="56" FontSize="28" Background="#6EC5CB"
 Click="BackButton_Click"/>

        <Button Content="Подтвердить" HorizontalAlignment="Left" Margin="1112,943,0,0" 
         VerticalAlignment="Top" Style="{StaticResource ImageButtonStyleConfirm}" 
         Width="263" Height="56" FontSize="28" Background="#6EC5CB"
         Click="ConfirmButton_Click"/>


        <TextBox x:Name="SearchIdTextBox" HorizontalAlignment="Left" Margin="725,138,0,0" TextWrapping="Wrap" 
          Text="" VerticalAlignment="Top" Width="400" Height="60" FontSize="28" 
          Foreground="#100100" BorderBrush="Transparent" Padding="10"/>

        <Button Content="Поиск" HorizontalAlignment="Left" Margin="1162,138,0,0" VerticalAlignment="Top" 
         Style="{StaticResource MenuButtonStyle}" Background="#fff" FontSize="28"
         Width="175" Height="60" Click="SearchButton_Click"/>


        <TextBox HorizontalAlignment="Left" Margin="725,228,0,0" TextWrapping="Wrap" 
          Text="{Binding CurrentProduct.Category, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
          VerticalAlignment="Top" Width="400" Height="60" FontSize="28" 
          Foreground="#100100" BorderBrush="Transparent" Padding="10"/>

        <TextBox HorizontalAlignment="Left" Margin="725,318,0,0" TextWrapping="Wrap" 
  Text="{Binding CurrentProduct.Product, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
  VerticalAlignment="Top" Width="400" Height="60" FontSize="28" 
  Foreground="#100100" BorderBrush="Transparent" Padding="10"/>

        <TextBox HorizontalAlignment="Left" Margin="725,408,0,0" TextWrapping="Wrap" 
          Text="{Binding CurrentProduct.Count, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
          VerticalAlignment="Top" Width="400" Height="60" FontSize="28" 
          Foreground="#100100" BorderBrush="Transparent" Padding="10"/>

        <TextBox HorizontalAlignment="Left" Margin="725,498,0,0" TextWrapping="Wrap" 
          Text="{Binding CurrentProduct.Storage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
          VerticalAlignment="Top" Width="400" Height="60" FontSize="28" 
          Foreground="#100100" BorderBrush="Transparent" Padding="10"/>

        <TextBox HorizontalAlignment="Left" Margin="725,588,0,0" TextWrapping="Wrap" 
          Text="{Binding CurrentProduct.Supplier, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
          VerticalAlignment="Top" Width="400" Height="60" FontSize="28" 
          Foreground="#100100" BorderBrush="Transparent" Padding="10"/>

        <TextBox HorizontalAlignment="Left" Margin="725,678,0,0" TextWrapping="Wrap" 
  Text="{Binding CurrentProduct.Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
  VerticalAlignment="Top" Width="400" Height="60" FontSize="28" 
  Foreground="#100100" BorderBrush="Transparent" Padding="10"/>


        <TextBlock Margin="679,152,0,0" Text="ID" FontSize="28"/>
        <TextBlock Margin="593,242,0,0" Text="Category" FontSize="28"/>
        <TextBlock Margin="593,332,0,0" Text="Product" FontSize="28"/>
        <TextBlock Margin="608,422,0,0" Text="Count" FontSize="28"/>
        <TextBlock Margin="600,512,0,0" Text="Storage" FontSize="28"/>
        <TextBlock Margin="593,602,0,0" Text="Supplier" FontSize="28"/>
        <TextBlock Margin="626,692,0,0" Text="Price" FontSize="28"/>

        <Button HorizontalAlignment="Left" Margin="946,943,0,0" 
 VerticalAlignment="Top" Style="{StaticResource ImageButtonStyleDelete}" Click="DeleteButton_Click"/>

        <Button HorizontalAlignment="Left" Margin="773,943,0,0" 
VerticalAlignment="Top" Style="{StaticResource ImageButtonStyleCreate}" Click="CreateButton_Click"/>
    </Grid>
</Window>
