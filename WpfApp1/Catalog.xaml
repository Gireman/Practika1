<Window x:Class="WpfApp1.Catalog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Catalog" Height="1024" Width="1440">
    <Grid>
        <!--Аккаунт и регистрация-->
        <Button x:Name="Acc" Content="" HorizontalAlignment="Left" 
        Margin="54,39,0,0" VerticalAlignment="Top" Style="{StaticResource AccountButtonStyle}"/>
        <Image HorizontalAlignment="Left" Height="44" 
       Margin="57,41,0,0" VerticalAlignment="Top" Width="46" Source="/AccountMale.png" IsHitTestVisible="False"/>

        <Button Content="" HorizontalAlignment="Left" 
        Margin="123,39,0,0" VerticalAlignment="Top" Style="{StaticResource RegistrationButtonStyle}"/>
        <Image HorizontalAlignment="Left" Height="31.44" 
       Margin="132.13,48.13,0,0" VerticalAlignment="Top" Width="31.44" Source="/PlusMath.png" IsHitTestVisible="False"/>

        <!--Меню-->
        <Button Content="" HorizontalAlignment="Left" x:Name="MainButton"
        Margin="505,41,0,0" VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Click="Button_Click"
        MouseEnter="MainButton_MouseEnter" MouseLeave="MainButton_MouseLeave"/>
        <TextBlock Margin="513,50,0,0" x:Name="MainTextBlock"
            Text="Главная" FontSize="28" IsHitTestVisible="False"/>

        <TextBlock Margin="661,50,0,0" Text="Каталог" IsHitTestVisible="False" FontSize="28"/>
        <Rectangle HorizontalAlignment="Left" Height="4" 
            Margin="661,89,0,0" VerticalAlignment="Top" Width="107" Fill="#100100" RadiusX="2" RadiusY="15"/>

        <Button Content="" HorizontalAlignment="Left" x:Name="BasketButton"
        Margin="808,41,0,0" VerticalAlignment="Top" Style="{StaticResource MenuButtonStyle}" Click="Button_Click" 
        MouseEnter="BasketButton_MouseEnter" MouseLeave="BasketButton_MouseLeave"/>
        <TextBlock Margin="813,50,0,0" x:Name="BasketTextBlock"
           Text="Корзина" IsHitTestVisible="False" FontSize="28"/>

        <!--Каталог-->
        <Image HorizontalAlignment="Left" Height="300" 
               Margin="54,189,0,0" VerticalAlignment="Top" Width="400" Source="/Rectangle29.png"/>
        <Image HorizontalAlignment="Left" Height="330" 
               Margin="140,159,0,0" VerticalAlignment="Top" Width="330" Source="/image2.png"/>
        <TextBlock Margin="74,422,0,0" Text="Бытовая&#x0a;техника" FontSize="24" Foreground="#FFFFFF"/>

    </Grid>
</Window>
