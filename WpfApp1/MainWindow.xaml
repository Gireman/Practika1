<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1440">
    <Grid>
        <Grid Name="Account">
            <Button x:Name="Acc" Content="" HorizontalAlignment="Left" Margin="54,39,0,0" VerticalAlignment="Top" Width="50" Height="50" Style="{StaticResource AccountButtonStyle}"/>
            <Image HorizontalAlignment="Left" Height="44" Margin="57,41,0,0" VerticalAlignment="Top" Width="46" Source="/Account Male.png" IsHitTestVisible="False"/>
            
        </Grid>
        <Grid Name="Registration">
            <Button Content="" HorizontalAlignment="Left" Margin="123,39,0,0" VerticalAlignment="Top" Width="50" Height="50" Style="{StaticResource RegistrationButtonStyle}"/>
            <Image HorizontalAlignment="Left" Height="31.44" Margin="132.13,48.13,0,0" VerticalAlignment="Top" Width="31.44" Source="/Plus Math.png" IsHitTestVisible="False"/>
        </Grid>
        <Grid Name="Menu">
            <Grid Name="Main">
                <TextBlock HorizontalAlignment="Left" Margin="513,50,0,0" TextWrapping="Wrap" Text="Главная" VerticalAlignment="Top" FontFamily="Verdana" FontWeight="Bold" FontSize="28" Foreground="#100100"/>
                <Rectangle HorizontalAlignment="Left" Height="4" Margin="513,89,0,0" VerticalAlignment="Top" Width="135" Fill="#100100" RadiusX="2" RadiusY="15"/>
            </Grid>
            <Grid Name="Catalog">
                <Button Content="" HorizontalAlignment="Left" Margin="123,39,0,0" VerticalAlignment="Top" Width="50" Height="50" Style="{StaticResource MenuButtonStyle}"/>
            </Grid>
        </Grid>


    </Grid>
</Window>
