<Window x:Class="WpfApp1.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Registration" Height="1024" Width="1440" Background="#6EC5CB">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="950" Margin="370,37,0,0"  VerticalAlignment="Top" Width="700" Fill="#fff" RadiusX="15" RadiusY="15"/>
        <TextBlock Margin="623,85,0,0" Text="Регистрация" FontSize="32"/>
        
        <Border CornerRadius="15" BorderThickness="2" BorderBrush="#100100" Width="400" Height="65" Margin="0,-630,0,0" >
            <TextBox x:Name="LoginTextBox" HorizontalAlignment="Left" Width="400" Height="65" TextWrapping="Wrap" Text="Логин*" 
         VerticalAlignment="Top"  Padding="10" FontSize="28" 
         Foreground="#100100" BorderBrush="Transparent" Background="Transparent"
         GotFocus="RegistrationTextBox_GotFocus" LostFocus="RegistrationTextBox_LostFocus"/>
        </Border>
        
        <Border CornerRadius="15" BorderThickness="2" BorderBrush="#100100" Width="400" Height="65" Margin="0,-470,0,0" >
            <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Пароль*" 
 VerticalAlignment="Top" Width="400" Height="65" Padding="10" FontSize="28" 
 Foreground="#100100" BorderBrush="Transparent" Background="Transparent"
         GotFocus="RegistrationTextBox_GotFocus" LostFocus="RegistrationTextBox_LostFocus"/>
        </Border>

        <Border CornerRadius="15" BorderThickness="2" BorderBrush="#100100" Width="400" Height="65" Margin="0,-310,0,0" >
            <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Width="400" Height="65" TextWrapping="Wrap" Text="Имя*" 
        VerticalAlignment="Top"  Padding="10" FontSize="28" 
        Foreground="#100100" BorderBrush="Transparent" Background="Transparent"
         GotFocus="RegistrationTextBox_GotFocus" LostFocus="RegistrationTextBox_LostFocus"/>
        </Border>

        <Border CornerRadius="15" BorderThickness="2" BorderBrush="#100100" Width="400" Height="65" Margin="0,-150,0,0" >
            <TextBox x:Name="SurnameTextBox" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Фамилия*" 
VerticalAlignment="Top" Width="400" Height="65" Padding="10" FontSize="28" 
Foreground="#100100" BorderBrush="Transparent" Background="Transparent"
         GotFocus="RegistrationTextBox_GotFocus" LostFocus="RegistrationTextBox_LostFocus"/>
        </Border>

        <Border CornerRadius="15" BorderThickness="2" BorderBrush="#100100" Width="400" Height="65" Margin="0,10,0,0" >
            <TextBox x:Name="PatronymicTextBox" HorizontalAlignment="Left" Width="400" Height="65" TextWrapping="Wrap" Text="Отчество" 
        VerticalAlignment="Top"  Padding="10" FontSize="28" 
        Foreground="#100100" BorderBrush="Transparent" Background="Transparent"
         GotFocus="RegistrationTextBox_GotFocus" LostFocus="RegistrationTextBox_LostFocus"/>
        </Border>

        <Border CornerRadius="15" BorderThickness="2" BorderBrush="#100100" Width="400" Height="65" Margin="0,170,0,0" >
            <TextBox x:Name="PhoneTextBox" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Номер телефона*" 
VerticalAlignment="Top" Width="400" Height="65" Padding="10" FontSize="28" 
Foreground="#100100" BorderBrush="Transparent" Background="Transparent"
         GotFocus="RegistrationTextBox_GotFocus" LostFocus="RegistrationTextBox_LostFocus"/>
        </Border>

        <Border CornerRadius="15" BorderThickness="2" BorderBrush="#100100" Width="400" Height="65" Margin="0,330,0,0" >
            <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Width="400" Height="65" TextWrapping="Wrap" Text="Почта" 
        VerticalAlignment="Top"  Padding="10" FontSize="28" 
        Foreground="#100100" BorderBrush="Transparent" Background="Transparent"
         GotFocus="RegistrationTextBox_GotFocus" LostFocus="RegistrationTextBox_LostFocus"/>
        </Border>

        <Border CornerRadius="15" BorderThickness="2" BorderBrush="#100100" Width="400" Height="65" Margin="0,490,0,0" >
            <TextBox x:Name="BirthdayTextBox" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Дата рождения*" 
VerticalAlignment="Top" Width="400" Height="65" Padding="10" FontSize="28" 
Foreground="#100100" BorderBrush="Transparent" Background="Transparent"
         GotFocus="RegistrationTextBox_GotFocus" LostFocus="RegistrationTextBox_LostFocus"/>
        </Border>

        <Button HorizontalAlignment="Left" Margin="544,830,0,0" VerticalAlignment="Top" Style="{StaticResource ImageButtonStyleReg}" Click="Button_ClickRegistration"/>
        <Button HorizontalAlignment="Left" Margin="692,940,0,0" VerticalAlignment="Top" BorderThickness="0" Background="Transparent" Click="Button_ClickEnter">
            <TextBlock Foreground="#6EC5CB" FontSize="24">Вход</TextBlock>
        </Button>
        <Button  HorizontalAlignment="Left" Margin="412,79,0,0" VerticalAlignment="Top" Style="{StaticResource ImageButtonStyleBackIco}" Click="Button_ClickBack"/>
    </Grid>
</Window>
