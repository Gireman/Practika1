<Window x:Class="WpfApp1.Enter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Enter" Height="1024" Width="1440" Background="#6EC5CB">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="550" Margin="370,237,0,0"  VerticalAlignment="Top" Width="700" Fill="#fff" RadiusX="15" RadiusY="15"/>
        <TextBlock Margin="683,285,0,0" Text="Вход" FontSize="32"/>
        <Border CornerRadius="15" BorderThickness="2" BorderBrush="#100100" Width="400" Height="65" Margin="0,-160,0,0" >
            <TextBox HorizontalAlignment="Left" Width="400" Height="65" TextWrapping="Wrap" Text="Логин" 
                 VerticalAlignment="Top"  Padding="10" FontSize="28" 
                 Foreground="#55100100" BorderBrush="Transparent" Background="Transparent"/>
        </Border>
        <Border CornerRadius="15" BorderThickness="2" BorderBrush="#100100" Width="400" Height="65" Margin="0,50,0,0" >
        <TextBox HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Пароль" 
         VerticalAlignment="Top" Width="400" Height="65" Padding="10" FontSize="28" 
         Foreground="#55100100" BorderBrush="Transparent" Background="Transparent"/>
        </Border>
        <Button HorizontalAlignment="Left" Margin="545,630,0,0" VerticalAlignment="Top" Style="{StaticResource ImageButtonStyleEnter}" Click="Button_ClickEnter"/>
        <Button HorizontalAlignment="Left" Margin="647,738,0,0" VerticalAlignment="Top" BorderThickness="0" Background="Transparent" Click="Button_ClickRegistration">
            <TextBlock Foreground="#6EC5CB" FontSize="24">Регистрация</TextBlock>
        </Button>
        <Button  HorizontalAlignment="Left" Margin="412,279,0,0" VerticalAlignment="Top" Style="{StaticResource ImageButtonStyleBackIco}" Click="Button_ClickBack"/>


    </Grid>
</Window>
